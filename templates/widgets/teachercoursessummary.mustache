{{!
    @template report_lmsace_reports/widgets/teachercoursessummary.

    Template for the teacher courses summary table.

    Example context (json):
    {
        "hascourses": true,
        "courses": [
            {
                "coursename": "Course 1",
                "enrolled": 25,
                "completionrate": 80.5,
                "averagegrade": 72.3,
                "activitiescount": 12
            }
        ]
    }
}}

{{#hascourses}}
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{#str}} course {{/str}}</th>
                <th>{{#str}} enrolled, report_lmsace_reports {{/str}}</th>
                <th>{{#str}} completionrate, report_lmsace_reports {{/str}}</th>
                <th>{{#str}} averagegrade, report_lmsace_reports {{/str}}</th>
                <th>{{#str}} activities, report_lmsace_reports {{/str}}</th>
            </tr>
        </thead>
        <tbody>
            {{#courses}}
            <tr>
                <td>{{coursename}}</td>
                <td>{{enrolled}}</td>
                <td>{{completionrate}}%</td>
                <td>{{averagegrade}}%</td>
                <td>{{activitiescount}}</td>
            </tr>
            {{/courses}}
        </tbody>
    </table>
</div>
{{/hascourses}}

{{^hascourses}}
<p class="alert alert-info">{{#str}} nodatatodisplay, report_lmsace_reports {{/str}}</p>
{{/hascourses}}
